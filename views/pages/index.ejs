       <div class="container bg-dark text-white">
    <h2 class="text-center mb-4">Escape Room Reservation</h2>
    <form>
      <div class="mb-3">
        <label for="firstName" class="form-label">First Name</label>
        <input type="text" class="form-control" id="firstName" placeholder="Enter your first name">
      </div>

      <div class="mb-3">
        <label for="lastName" class="form-label">Last Name</label>
        <input type="text" class="form-control" id="lastName" placeholder="Enter your last name">
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" placeholder="Enter your email">
      </div>

      <div class="mb-3">
        <label for="reservationDate" class="form-label">Date of Reservation</label>
        <input type="date" class="form-control" id="reservationDate">
      </div>

      <div class="mb-4">
        <label for="roomChoice" class="form-label">Choose a Room</label>
        <select class="form-select" id="roomChoice">
          <option selected disabled>Choose...</option>
          <option value="scp">SCP Foundation Escape</option>
          <option value="basement">Eery Basement Escape</option>
          <option value="ikea">IKEA Escape</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary w-100">Submit Reservation</button>
    </form>
  </div>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
   
      
</body>
</html>